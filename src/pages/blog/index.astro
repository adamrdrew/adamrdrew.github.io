---
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

const allPosts = await getCollection('blog');
const sortedPosts = allPosts.sort((a: CollectionEntry<'blog'>, b: CollectionEntry<'blog'>) =>
  b.data.publishDate.getTime() - a.data.publishDate.getTime()
);
---

<BaseLayout title="Blog">
  <h1 class="text-4xl md:text-5xl font-bold text-text-primary dark:text-text-dark-primary mb-8">Blog</h1>
  <section class="space-y-8">
    {sortedPosts.map((post: CollectionEntry<'blog'>) => (
      <article class="border-l-4 border-accent-primary dark:border-accent-dark-primary pl-6 py-4 space-y-2">
        <h2 class="text-2xl md:text-3xl font-semibold">
          <a href={`/blog/${post.slug}`} class="text-text-primary dark:text-text-dark-primary hover:text-accent-primary dark:hover:text-accent-dark-primary transition-colors duration-200">
            {post.data.title}
          </a>
        </h2>
        <time datetime={post.data.publishDate.toISOString()} class="text-sm text-text-muted dark:text-text-dark-muted">
          {post.data.publishDate.toLocaleDateString('en-US', {
            year: 'numeric',
            month: 'long',
            day: 'numeric'
          })}
        </time>
        <p class="text-text-secondary dark:text-text-dark-secondary leading-relaxed">{post.data.description}</p>
      </article>
    ))}
  </section>
</BaseLayout>
