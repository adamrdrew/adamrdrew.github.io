---
import Base from '../layouts/Base.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog', ({ data }) => !data.draft))
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, 5);

const projects = (await getCollection('projects'))
  .sort((a, b) => a.data.order - b.data.order);
---

<Base title="Home">
  <section class="hero">
    <div class="hero-ornament" aria-hidden="true">
      <svg viewBox="0 0 400 40" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M0 20 Q100 5 200 20 Q300 35 400 20" stroke="var(--colour-accent)" stroke-width="1" opacity="0.3"/>
        <path d="M50 20 Q150 8 250 20 Q350 32 400 15" stroke="var(--colour-sage)" stroke-width="0.5" opacity="0.2"/>
      </svg>
    </div>
    <h1>
      <span class="hero-property">Property</span>
      <span class="hero-amp">&amp;</span>
      <span class="hero-method">Method</span>
    </h1>
    <p class="tagline">A Software Development Collaboration.</p>
    <div class="hero-subtitle">
      <span class="hero-name">Adam Drew</span>
      <span class="hero-dot">&middot;</span>
      <span class="hero-name">Alan</span>
    </div>
  </section>

  <section class="section">
    <div class="section-header">
      <h2>Projects</h2>
      <a href="/projects" class="section-link">View all &rarr;</a>
    </div>
    <div class="project-grid">
      {projects.map((project) => (
        <a href={`/projects/${project.id}`} class="project-card">
          <h3>{project.data.title}</h3>
          <p>{project.data.description}</p>
          <div class="tags">
            {project.data.tags.slice(0, 3).map((tag) => (
              <span class="tag">{tag}</span>
            ))}
          </div>
        </a>
      ))}
    </div>
  </section>

  <section class="section">
    <div class="section-header">
      <h2>Recent Writing</h2>
      <a href="/blog" class="section-link">View all &rarr;</a>
    </div>
    <ul class="post-list">
      {posts.map((post) => (
        <li>
          <a href={`/blog/${post.id}`} class="post-link">
            <span class="post-title">{post.data.title}</span>
            <span class="post-meta">
              <time datetime={post.data.date.toISOString()}>
                {post.data.date.toLocaleDateString('en-GB', { day: 'numeric', month: 'short', year: 'numeric' })}
              </time>
            </span>
          </a>
        </li>
      ))}
    </ul>
  </section>
</Base>

<style>
  /* ---- Hero ---- */
  .hero {
    padding: var(--space-4xl) 0 var(--space-3xl);
    text-align: center;
  }

  .hero-ornament {
    width: 400px;
    max-width: 80vw;
    margin: 0 auto var(--space-xl);
  }

  .hero-ornament svg {
    width: 100%;
    height: auto;
  }

  .hero h1 {
    font-family: var(--font-heading);
    font-size: clamp(2.5rem, 7vw, var(--font-size-4xl));
    font-weight: 700;
    letter-spacing: -0.02em;
    line-height: 1.1;
    margin-bottom: var(--space-lg);
    display: flex;
    justify-content: center;
    align-items: baseline;
    gap: 0.25em;
    flex-wrap: wrap;
  }

  .hero-amp {
    color: var(--colour-accent);
    font-style: italic;
    font-weight: 400;
    font-size: 1.1em;
  }

  .tagline {
    color: var(--colour-text-muted);
    font-size: var(--font-size-lg);
    max-width: 32rem;
    margin: 0 auto var(--space-lg);
  }

  .hero-subtitle {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: var(--space-sm);
    color: var(--colour-text-dim);
    font-size: var(--font-size-sm);
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .hero-dot {
    color: var(--colour-accent);
  }

  /* ---- Sections ---- */
  .section {
    margin-bottom: var(--space-3xl);
  }

  .section-header {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    margin-bottom: var(--space-lg);
    padding-bottom: var(--space-sm);
    border-bottom: 1px solid var(--colour-border);
  }

  .section-header h2 {
    margin: 0;
    font-size: var(--font-size-xl);
  }

  .section-link {
    font-size: var(--font-size-sm);
    color: var(--colour-text-muted);
    transition: color var(--transition-fast);
  }

  .section-link:hover {
    color: var(--colour-accent);
  }

  /* ---- Project Grid ---- */
  .project-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(18rem, 1fr));
    gap: var(--space-lg);
  }

  .project-card {
    display: block;
    background: var(--colour-bg-raised);
    border: 1px solid var(--colour-border);
    border-radius: var(--border-radius-md);
    padding: var(--space-lg);
    transition: border-color var(--transition-fast), background var(--transition-fast), box-shadow var(--transition-med);
    color: var(--colour-text);
  }

  .project-card:hover {
    border-color: var(--colour-border-accent);
    background: var(--colour-bg-hover);
    box-shadow: 0 4px 20px var(--colour-accent-glow);
  }

  .project-card h3 {
    font-size: var(--font-size-lg);
    margin-bottom: var(--space-sm);
    margin-top: 0;
  }

  .project-card p {
    font-size: var(--font-size-sm);
    color: var(--colour-text-muted);
    margin-bottom: var(--space-md);
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .tags {
    display: flex;
    gap: var(--space-xs);
    flex-wrap: wrap;
  }

  .tag {
    font-size: var(--font-size-xs);
    color: var(--colour-text-muted);
    background: var(--colour-tag-bg);
    padding: 0.15em 0.5em;
    border-radius: var(--border-radius-sm);
  }

  /* ---- Post List ---- */
  .post-list {
    list-style: none;
    padding: 0;
  }

  .post-list li {
    margin-bottom: 0;
    border-bottom: 1px solid var(--colour-border);
  }

  .post-list li:last-child {
    border-bottom: none;
  }

  .post-link {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    padding: var(--space-md) 0;
    color: var(--colour-text);
    gap: var(--space-md);
  }

  .post-link:hover .post-title {
    color: var(--colour-accent);
  }

  .post-title {
    font-weight: 500;
    transition: color var(--transition-fast);
  }

  .post-meta {
    font-size: var(--font-size-sm);
    color: var(--colour-text-dim);
    white-space: nowrap;
  }
</style>
