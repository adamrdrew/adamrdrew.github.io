---
import BaseLayout from './BaseLayout.astro';

interface Props {
  title: string;
  publishDate: Date;
  readingTime: number;
  tags: string[];
}

const { title, publishDate, readingTime, tags } = Astro.props;

const formattedDate = publishDate.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<BaseLayout title={title}>
  <article class="prose prose-slate dark:prose-invert max-w-none">
    <header class="mb-8 pb-8 border-b border-border dark:border-border-dark">
      <h1 class="text-4xl md:text-5xl font-bold text-text-primary dark:text-text-dark-primary mb-4">
        {title}
      </h1>
      <div class="flex flex-wrap items-center gap-4 text-sm text-text-muted dark:text-text-dark-muted">
        <time datetime={publishDate.toISOString()}>
          {formattedDate}
        </time>
        <span class="text-text-muted dark:text-text-dark-muted">â€¢</span>
        <span>{readingTime} min read</span>
      </div>
      {tags.length > 0 && (
        <div class="flex flex-wrap gap-2 mt-4">
          {tags.map(tag => (
            <span class="inline-block px-3 py-1 text-xs font-medium bg-accent-primary/10 dark:bg-accent-dark-primary/10 text-accent-primary dark:text-accent-dark-primary rounded-full">
              {tag}
            </span>
          ))}
        </div>
      )}
    </header>
    <div class="text-text-secondary dark:text-text-dark-secondary leading-relaxed">
      <slot />
    </div>
  </article>
</BaseLayout>
