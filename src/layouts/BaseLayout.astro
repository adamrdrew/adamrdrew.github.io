---
import Navigation from '../components/Navigation';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;

const navLinks = [
  { href: '/', label: 'Home' },
  { href: '/about', label: 'About' },
  { href: '/blog', label: 'Blog' },
  { href: '/ushabti', label: 'Ushabti' },
  { href: '/pharaoh', label: 'Pharaoh' },
  { href: '/hieroglyphs', label: 'Hieroglyphs' },
];
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
</head>
<body class="bg-background-primary text-text-primary dark:bg-background-dark-primary dark:text-text-dark-primary font-sans min-h-screen">
  <Navigation client:load links={navLinks} />
  <main class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <slot />
  </main>
  <Footer />
</body>
</html>
