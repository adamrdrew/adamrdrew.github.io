---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Software development by Property & Method.' } = Astro.props;
const siteTitle = 'Property & Method';
const fullTitle = title === 'Home' ? siteTitle : `${title} | ${siteTitle}`;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <title>{fullTitle}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <!-- Cormorant Garamond: headings with Art Nouveau architectural quality -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,400;0,500;0,600;0,700;1,400;1,500;1,600&display=swap" rel="stylesheet" />
  </head>
  <body>
    <nav class="site-nav">
      <div class="nav-inner">
        <a href="/" class="nav-brand">
          <span class="brand-property">Property</span>
          <span class="brand-amp">&amp;</span>
          <span class="brand-method">Method</span>
        </a>
        <div class="nav-links">
          <a href="/projects">Projects</a>
          <a href="/blog">Blog</a>
          <a href="/about">About</a>
        </div>
      </div>
    </nav>

    <main class="site-main">
      <slot />
    </main>

    <footer class="site-footer">
      <div class="footer-inner">
        <div class="footer-ornament" aria-hidden="true"></div>
        <p class="footer-brand">Property <span class="footer-amp">&amp;</span> Method</p>
        <p class="footer-meta">&copy; {new Date().getFullYear()} Adam Drew &amp; Alan. Built with <a href="https://astro.build">Astro</a>.</p>
      </div>
    </footer>
  </body>
</html>

<style>
  .site-nav {
    position: sticky;
    top: 0;
    z-index: 10;
    background: var(--colour-bg);
    border-bottom: 1px solid var(--colour-border);
    height: var(--nav-height);
    display: flex;
    align-items: center;
  }

  .nav-inner {
    width: 100%;
    max-width: var(--page-width);
    margin: 0 auto;
    padding: 0 var(--space-lg);
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .nav-brand {
    font-family: var(--font-heading);
    font-weight: 600;
    font-size: var(--font-size-lg);
    color: var(--colour-text);
    letter-spacing: 0.01em;
    display: flex;
    gap: 0.3em;
    align-items: baseline;
  }

  .nav-brand:hover {
    color: var(--colour-accent);
  }

  .brand-amp {
    color: var(--colour-accent);
    font-style: italic;
    font-weight: 400;
  }

  .nav-links {
    display: flex;
    gap: var(--space-lg);
  }

  .nav-links a {
    color: var(--colour-text-muted);
    font-size: var(--font-size-sm);
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    transition: color var(--transition-fast);
  }

  .nav-links a:hover {
    color: var(--colour-accent);
  }

  .site-main {
    max-width: var(--page-width);
    margin: 0 auto;
    padding: var(--space-2xl) var(--space-lg);
    min-height: calc(100vh - var(--nav-height) - 8rem);
  }

  .site-footer {
    border-top: 1px solid var(--colour-border);
    padding: var(--space-2xl) var(--space-lg);
    text-align: center;
  }

  .footer-inner {
    max-width: var(--page-width);
    margin: 0 auto;
  }

  .footer-ornament {
    width: 200px;
    height: 20px;
    margin: 0 auto var(--space-lg);
    background-image: var(--ornament-rule);
    background-repeat: no-repeat;
    background-position: center;
    background-size: 200px 20px;
    opacity: 0.5;
  }

  .footer-brand {
    font-family: var(--font-heading);
    font-size: var(--font-size-lg);
    font-weight: 600;
    color: var(--colour-text-muted);
    margin-bottom: var(--space-sm);
  }

  .footer-amp {
    color: var(--colour-accent);
    font-style: italic;
    font-weight: 400;
  }

  .footer-meta {
    color: var(--colour-text-dim);
    font-size: var(--font-size-sm);
    margin-bottom: 0;
  }

  .footer-meta a {
    color: var(--colour-text-muted);
  }

  .footer-meta a:hover {
    color: var(--colour-accent);
  }
</style>
